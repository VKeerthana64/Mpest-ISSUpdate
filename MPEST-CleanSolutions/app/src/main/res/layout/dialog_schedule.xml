<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:background="@android:color/transparent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/close_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:elevation="@dimen/_2sdp"
        android:padding="10dp"
        android:src="@drawable/ic_close"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="1dp"
        app:civ_fill_color="@color/white" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="25dp"
        android:background="@drawable/border_shape">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <com.amana.CLEANSolutions.components.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="My Job"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14sdp"
                android:visibility="visible"
                app:fontName="Font_Bold" />


            <com.amana.CLEANSolutions.components.CustomFontTextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:background="@color/colorAccent"
                app:fontName="Font_Medium" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_above="@+id/ll_booknow"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/rl_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <com.amana.CLEANSolutions.components.CustomFontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="35"
                            android:text="Service Id"
                            app:fontName="Font_Light" />

                        <com.amana.CLEANSolutions.components.CustomFontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="  : "
                            app:fontName="Font_Light" />

                        <com.amana.CLEANSolutions.components.CustomFontTextView
                            android:id="@+id/serviceId_txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="65"
                            android:text=""
                            android:textColor="@color/oil"
                            app:fontName="Font_Bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <com.amana.CLEANSolutions.components.CustomFontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="35"
                            android:text="Work Order No"
                            app:fontName="Font_Light" />

                        <com.amana.CLEANSolutions.components.CustomFontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="  : "
                            app:fontName="Font_Light" />

                        <com.amana.CLEANSolutions.components.CustomFontTextView
                            android:id="@+id/work_orderno_txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="65"
                            android:text=""
                            android:textColor="@color/oil"
                            app:fontName="Font_Bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <com.amana.CLEANSolutions.components.CustomFontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="35"
                            android:text="Contract No"
                            app:fontName="Font_Light" />

                        <com.amana.CLEANSolutions.components.CustomFontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="  : "
                            app:fontName="Font_Light" />

                        <com.amana.CLEANSolutions.components.CustomFontTextView
                            android:id="@+id/contract_no_txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="65"
                            android:text=""
                            android:textColor="@color/oil"
                            app:fontName="Font_Bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <com.amana.CLEANSolutions.components.CustomFontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="35"
                            android:text="Team"
                            app:fontName="Font_Light" />

                        <com.amana.CLEANSolutions.components.CustomFontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="  : "
                            app:fontName="Font_Light" />

                        <com.amana.CLEANSolutions.components.CustomFontTextView
                            android:id="@+id/team_txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="65"
                            android:text=""
                            android:textColor="@color/oil"
                            app:fontName="Font_Bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <com.amana.CLEANSolutions.components.CustomFontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="35"
                            android:text="Scheduled From"
                            app:fontName="Font_Light" />

                        <com.amana.CLEANSolutions.components.CustomFontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="  : "
                            app:fontName="Font_Light" />

                        <com.amana.CLEANSolutions.components.CustomFontTextView
                            android:id="@+id/scheduled_start_time_txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="65"
                            android:text=""
                            android:textColor="@color/oil"
                            app:fontName="Font_Bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <com.amana.CLEANSolutions.components.CustomFontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="35"
                            android:text="Scheduled To"
                            app:fontName="Font_Light" />

                        <com.amana.CLEANSolutions.components.CustomFontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="  : "
                            app:fontName="Font_Light" />

                        <com.amana.CLEANSolutions.components.CustomFontTextView
                            android:id="@+id/scheduled_end_time_txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="65"
                            android:text=""
                            android:textColor="@color/oil"
                            app:fontName="Font_Bold" />

                    </LinearLayout>

                </LinearLayout>


            </ScrollView>

            <com.amana.CLEANSolutions.components.CustomFontButton
                android:id="@+id/ok_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_margin="@dimen/_5sdp"
                android:elevation="@dimen/_10sdp"
                android:text="Close"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/btn_shape_green"
                android:layout_gravity="center"
                app:fontName="Font_Bold" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
