<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:focusable="false"
    android:focusableInTouchMode="true">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/close_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:elevation="@dimen/_2sdp"
        android:padding="10dp"
        android:src="@drawable/ic_close"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="1dp"
        app:civ_fill_color="@color/white" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="25dp"
        android:background="@drawable/border_shape">

        <com.amana.CLEANSolutions.components.CustomFontTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            app:fontName="Font_Bold"
            android:textAllCaps="true"
           android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:text="Select Remarks"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:scrollbars="none" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="5.5"
                android:orientation="vertical">

                <com.amana.CLEANSolutions.components.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="center_horizontal"
                    android:text="Synchronization"
                    android:textAllCaps="true"
                    android:textColor="@color/oil"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="gone"
                    app:fontName="Font_Bold" />


                <com.amana.CLEANSolutions.components.CustomFontTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="10dp"
                    android:theme="@style/TextLabelDialog"
                    app:fontName="Font_Medium">

                    <com.amana.CLEANSolutions.components.CustomFontEditText
                        android:id="@+id/input_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="false"
                        android:visibility="gone"
                        android:hint="Remarks *"
                        android:inputType="textMultiLine"
                        android:textColor="@color/oil"
                        android:textSize="@dimen/_12sdp"
                        app:fontName="Font_Medium" />
                </com.amana.CLEANSolutions.components.CustomFontTextInputLayout>


                <com.amana.CLEANSolutions.components.CustomFontTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="10dp"
                    android:theme="@style/TextLabelDialog"
                    app:fontName="Font_Medium">

                    <com.amana.CLEANSolutions.components.CustomFontEditText
                        android:id="@+id/input_others"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Others"
                        android:inputType="textMultiLine"
                        android:textColor="@color/oil"
                        android:textSize="@dimen/_12sdp"
                        app:fontName="Font_Medium" />
                </com.amana.CLEANSolutions.components.CustomFontTextInputLayout>


                <com.amana.CLEANSolutions.components.CustomFontButton
                    android:id="@+id/ok_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/btn_shape_green"

                    android:elevation="@dimen/_10sdp"
                    android:text="OK"
                    android:textColor="@color/colorPrimary"
                    app:fontName="Font_Bold" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</FrameLayout>
