<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="2dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.amana.MPESTPestoff.components.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary"
                    app:fontName="Font_Medium" />


                <ImageView
                    android:id="@+id/iv_photo"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter" />

                <com.amana.MPESTPestoff.components.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/jumbo"
                    app:fontName="Font_Medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="90"
                        android:orientation="vertical">

                        <com.amana.MPESTPestoff.components.CustomFontTextView
                            android:id="@+id/remarkclick_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/_3sdp"
                            android:drawableRight="@drawable/ic_edit_green"
                            android:text="Remarks"
                            android:textColor="@color/oil"
                            android:textSize="@dimen/_14sdp"
                            app:fontName="Font_Bold" />

                        <com.amana.MPESTPestoff.components.CustomFontTextView
                            android:id="@+id/remarksText_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="test"
                            android:textSize="@dimen/_12sdp"
                            app:fontName="Font_Medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="10"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_delete"
                            android:layout_width="30dp"
                            android:layout_height="30dp"

                            android:layout_gravity="bottom"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_delete_green" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>