<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:focusable="false"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:scaleType="fitXY">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:src="@drawable/app_logo" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="vertical">

                        <!--  Email Label -->
                        <com.amana.MPESTPestoff.components.CustomFontTextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="10dp"
                            android:theme="@style/TextLabelDialog"
                            app:fontName="Font_Medium">

                            <com.amana.MPESTPestoff.components.CustomFontEditText
                                android:id="@+id/input_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Login ID"
                                android:inputType="text"
                                android:textColor="@color/oil"
                                android:textSize="@dimen/_12sdp"
                                app:fontName="Font_Medium" />


                        </com.amana.MPESTPestoff.components.CustomFontTextInputLayout>

                        <!--  Password Label -->
                        <com.amana.MPESTPestoff.components.CustomFontTextInputLayout
                            android:id="@+id/password_input_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="5dp"
                            android:theme="@style/TextLabelDialog"

                            app:fontName="Font_Medium"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleTint="@color/aluminum">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/input_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:textColor="@color/oil"
                                android:textSize="@dimen/_12sdp" />

                        </com.amana.MPESTPestoff.components.CustomFontTextInputLayout>

                        <com.amana.MPESTPestoff.components.CustomFontTextView
                            app:fontName="Font_Medium"
                            android:id="@+id/errorMsg_txt"
                            android:layout_width="wrap_content"
                            android:textColor="@color/Red"
                            android:visibility="gone"
                            android:layout_gravity="center_horizontal"
                            android:text="Login Id is not exist"
                            android:layout_height="wrap_content" />

                        <ProgressBar
                            android:id="@+id/progressBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:indeterminate="true"
                            android:visibility="gone" />


                    </LinearLayout>

                    <com.amana.MPESTPestoff.components.CustomFontButton
                        android:id="@+id/btn_signin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@color/yellow"
                        android:text="@string/sign_in"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        app:fontName="Font_Bold" />

                   <!-- <com.amana.mpestclean.components.CustomFontTextView
                        android:id="@+id/success_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:visibility="gone"
                        app:fontName="Font_Medium" />-->
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <com.amana.MPESTPestoff.components.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:text="@string/powered_by"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        app:fontName="Font_Light" />
</RelativeLayout>
