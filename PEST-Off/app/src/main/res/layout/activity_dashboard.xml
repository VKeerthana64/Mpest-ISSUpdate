 <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

     <com.amana.MPESTPestoff.components.CustomFontTextView
         android:id="@+id/logout_txt"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:gravity="right"
         android:layout_margin="@dimen/_5sdp"
         android:padding="@dimen/_10sdp"
         android:text="Logout"
         android:drawablePadding="@dimen/_5sdp"
         android:drawableRight="@drawable/db_logout"
         android:textColor="@color/white"
         android:textSize="@dimen/_14sdp"
         app:fontName="Font_Bold" />

     <ImageView
         android:id="@+id/img_icon"
         android:layout_below="@+id/logout_txt"
         android:layout_width="@dimen/_200sdp"
         android:layout_height="wrap_content"
         android:layout_centerInParent="true"
         android:layout_margin="@dimen/_20sdp"
         android:adjustViewBounds="true"
         android:scaleType="fitXY"
         android:src="@drawable/app_logo" />

        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/img_icon"
            android:id="@+id/rv_dashboard"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_60sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_alignParentBottom="true"
         android:layout_alignBottom="@+id/img_icon"
         android:orientation="vertical"
         android:layout_height="wrap_content">

     <com.amana.MPESTPestoff.components.CustomFontTextView
         android:id="@+id/copyRight_txt"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="@dimen/_8sdp"
         android:gravity="center_horizontal"
          android:text="@string/powered_by"
         android:textColor="@color/white"
         android:textSize="@dimen/_10sdp"
         app:fontName="Font_Light" />
     </LinearLayout>

    </RelativeLayout>

