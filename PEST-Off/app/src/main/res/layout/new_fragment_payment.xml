<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myjob.MyJobActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollView"
         android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.amana.MPESTPestoff.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:text="Service ID"
                    android:textColor="@color/oil"
                    app:fontName="Font_Light" />

                <com.amana.MPESTPestoff.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="  : "
                    android:textColor="@color/oil"
                    app:fontName="Font_Light" />

                <com.amana.MPESTPestoff.components.CustomFontTextView
                    android:id="@+id/serviceId_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:text="SVC-1234"
                    android:textColor="@color/oil"
                    app:fontName="Font_Bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.amana.MPESTPestoff.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:text="Amount Payable"
                    android:textColor="@color/oil"
                    app:fontName="Font_Light" />

                <com.amana.MPESTPestoff.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="  : "
                    android:textColor="@color/oil"
                    app:fontName="Font_Light" />

                <com.amana.MPESTPestoff.components.CustomFontTextView
                    android:id="@+id/amtPaid_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:text="$1234"
                    android:textColor="@color/oil"
                    app:fontName="Font_Bold" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <com.amana.MPESTPestoff.components.CustomFontButton
                    android:id="@+id/clear_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/btn_shape_green"
                    android:text="Bank Transfer"
                    app:fontName="Font_Medium" />

                <com.amana.MPESTPestoff.components.CustomFontButton
                    android:id="@+id/submit_btn"
                    android:layout_toRightOf="@+id/clear_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/btn_shape_green"
                    android:text="Cash"
                    app:fontName="Font_Medium" />

                <com.amana.MPESTPestoff.components.CustomFontButton
                    android:id="@+id/proceed_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/submit_btn"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:textColor="@color/white"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/btn_shape_yellow"
                    android:text="Cheque"
                    app:fontName="Font_Medium" />

            </RelativeLayout>

            <com.amana.MPESTPestoff.components.CustomFontTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:theme="@style/TextLabelDialog"
                app:fontName="Font_Medium">

                <com.amana.MPESTPestoff.components.CustomFontEditText
                    android:id="@+id/input_paymentMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Amount Received"
                    android:inputType="text"
                    android:textColor="@color/oil"
                    android:textSize="@dimen/_12sdp"
                    app:fontName="Font_Medium" />

            </com.amana.MPESTPestoff.components.CustomFontTextInputLayout>

            <com.amana.MPESTPestoff.components.CustomFontTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:theme="@style/TextLabelDialog"
                app:fontName="Font_Medium">

                <com.amana.MPESTPestoff.components.CustomFontEditText
                    android:id="@+id/input_total_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name of Bank"
                    android:inputType="numberDecimal"
                    android:textColor="@color/oil"
                    android:textSize="@dimen/_12sdp"
                    app:fontName="Font_Medium" />

            </com.amana.MPESTPestoff.components.CustomFontTextInputLayout>


            <com.amana.MPESTPestoff.components.CustomFontTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:theme="@style/TextLabelDialog"
                app:fontName="Font_Medium">

                <com.amana.MPESTPestoff.components.CustomFontEditText
                    android:id="@+id/input_note_chqno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cheque No."
                    android:inputType="text"
                    android:textColor="@color/oil"
                    android:textSize="@dimen/_12sdp"
                    app:fontName="Font_Medium" />

            </com.amana.MPESTPestoff.components.CustomFontTextInputLayout>



            <com.amana.MPESTPestoff.components.CustomFontTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:theme="@style/TextLabelDialog"
                app:fontName="Font_Medium">

                <com.amana.MPESTPestoff.components.CustomFontEditText
                    android:id="@+id/input_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Remarks"
                    android:inputType="text"
                    android:textColor="@color/oil"
                    android:textSize="@dimen/_12sdp"
                    app:fontName="Font_Medium" />

            </com.amana.MPESTPestoff.components.CustomFontTextInputLayout>



        </LinearLayout>
    </ScrollView>
    </LinearLayout>

</RelativeLayout>
