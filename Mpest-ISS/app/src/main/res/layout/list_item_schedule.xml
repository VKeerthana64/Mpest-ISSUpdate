<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_1sdp"
        android:weightSum="2">

        <com.amana.MpestISS.components.CustomFontTextView
            android:layout_width="@dimen/_5sdp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:background="@color/colorPrimary"
            app:fontName="Font_Medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <LinearLayout
                    android:id="@+id/ll_view_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:paddingTop="5dp"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="60"
                            android:orientation="horizontal">

                            <com.amana.MpestISS.components.CustomFontTextView
                                android:id="@+id/quote_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                app:fontName="Font_Medium" />

                            <com.amana.MpestISS.components.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Service Id : "
                                android:textSize="12dp"
                                app:fontName="Font_Light" />

                            <com.amana.MpestISS.components.CustomFontTextView
                                android:id="@+id/service_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:text=""
                                android:textColor="@color/colorAccent"
                                android:textSize="12dp"

                                app:fontName="Font_Bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="40"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <com.amana.MpestISS.components.CustomFontTextView
                                android:id="@+id/lbl_quote_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Paid Amt  "
                                android:visibility="gone"
                                app:fontName="Font_Medium" />

                            <com.amana.MpestISS.components.CustomFontTextView
                                android:id="@+id/datetime_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:maxLines="2"
                                android:visibility="gone"
                                android:text="01-Jun-18 8:30 AM"
                                android:textSize="@dimen/_10sdp"

                                app:fontName="Font_Regular" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_14sdp"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <com.amana.MpestISS.components.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Customer : "
                                android:textSize="12dp"
                                app:fontName="Font_Light" />

                            <com.amana.MpestISS.components.CustomFontTextView
                                android:id="@+id/customer_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text=""
                                android:textColor="@color/colorAccent"
                                android:textSize="12dp"

                                app:fontName="Font_Bold" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <com.amana.MpestISS.components.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:background="@color/base"
                    app:fontName="Font_Medium" />


            </LinearLayout>





    </LinearLayout>

</LinearLayout>