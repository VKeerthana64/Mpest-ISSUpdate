<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="textFieldStyle" format="reference"/>

    <declare-styleable name="CustomFontTextView">
        <attr name="fontName"/>
    </declare-styleable>

    <declare-styleable name="CustomFontEditText">
        <attr name="fontName"/>
    </declare-styleable>

    <declare-styleable name="CustomFontTextInputLayout">
        <attr name="fontName"/>
    </declare-styleable>

    <declare-styleable name="CustomFontCheckBox">
        <attr name="fontName"/>
    </declare-styleable>

    <declare-styleable name="CustomFontSpinner">
        <attr name="fontName"/>
    </declare-styleable>

    <declare-styleable name="LockableViewPager">
        <attr name="fontName"/>
    </declare-styleable>

    <attr name="fontName" format="enum">
        <enum name="Font_Regular" value="1" />
        <enum name="Font_Bold" value="2" />
        <enum name="Font_Light" value="3" />
        <enum name="Font_Medium" value="4" />
    </attr>

</resources>