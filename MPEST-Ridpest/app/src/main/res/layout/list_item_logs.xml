<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardCornerRadius="2dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ll_view_details"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="5dp"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="70"
                            android:orientation="horizontal">

                            <com.amana.MPESTRidpest.components.CustomFontTextView
                                android:id="@+id/quote_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                app:fontName="Font_Medium" />

                            <com.amana.MPESTRidpest.components.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Service Id  : "
                                android:textSize="12dp"
                                app:fontName="Font_Light" />

                            <com.amana.MPESTRidpest.components.CustomFontTextView
                                android:id="@+id/service_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:text=""
                                android:textSize="12dp"
                                android:textStyle="bold"
                                app:fontName="Font_Bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="30"
                            android:orientation="horizontal">


                            <com.amana.MPESTRidpest.components.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status      : "
                                android:visibility="gone"
                                android:textSize="12dp"
                                app:fontName="Font_Light" />

                            <com.amana.MPESTRidpest.components.CustomFontTextView
                                android:id="@+id/status_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:gravity="right"
                                android:textColor="@color/black"
                                android:text="Completed"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold"
                                app:fontName="Font_Bold" />
                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="50"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <com.amana.MPESTRidpest.components.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Log date   : "
                                android:textSize="12dp"
                                app:fontName="Font_Light" />

                            <com.amana.MPESTRidpest.components.CustomFontTextView
                                android:id="@+id/logdate_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text=""

                                android:textSize="12dp"
                                android:textStyle="bold"
                                app:fontName="Font_Bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="50"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <com.amana.MPESTRidpest.components.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Log time : "
                                android:textSize="12dp"
                                app:fontName="Font_Light" />

                            <com.amana.MPESTRidpest.components.CustomFontTextView
                                android:id="@+id/logtime_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text=""
                                android:textColor="@color/oil"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                app:fontName="Font_Bold" />
                        </LinearLayout>




                    </LinearLayout>


                </LinearLayout>

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/_3sdp"
                    android:background="@color/base"
                    app:fontName="Font_Medium" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.amana.MPESTRidpest.components.CustomFontTextView
                        android:id="@+id/preview_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="5dp"
                        android:maxLines="1"
                        android:padding="@dimen/_5sdp"
                        android:text="DOWNLOAD PDF"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        app:fontName="Font_Bold" />

                    <com.amana.MPESTRidpest.components.CustomFontTextView
                        android:id="@+id/view_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:maxLines="1"
                        android:padding="@dimen/_5sdp"
                        android:text="VIEW"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        app:fontName="Font_Bold" />



                </RelativeLayout>





            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>

</LinearLayout>