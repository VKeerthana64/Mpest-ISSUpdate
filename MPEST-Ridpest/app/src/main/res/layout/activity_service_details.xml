<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quoteLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_above="@+id/ll_booknow"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:text="Service Id"
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="  : "
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:id="@+id/serviceId_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:text=""
                    android:textColor="@color/oil"
                    app:fontName="Font_Bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:text="Work Order No"
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="  : "
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:id="@+id/work_orderno_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:text=""
                    android:textColor="@color/oil"
                    app:fontName="Font_Bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:text="Contract No"
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="  : "
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:id="@+id/contract_no_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:text=""
                    android:textColor="@color/oil"
                    app:fontName="Font_Bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:text="Customer Name"
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="  : "
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:id="@+id/customer_name_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:text=""
                    android:textColor="@color/oil"
                    app:fontName="Font_Bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:text="Job Type"
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="  : "
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:id="@+id/Types_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    app:fontName="Font_Bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:text="Scheduled Date"
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="  : "
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:id="@+id/scheduled_date_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:text=""
                    android:textColor="@color/oil"
                    app:fontName="Font_Bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:text="Scheduled Start Time"
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="  : "
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:id="@+id/scheduled_start_time_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:text=""
                    android:textColor="@color/oil"
                    app:fontName="Font_Bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:text="Scheduled End Time"
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="  : "
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:id="@+id/scheduled_end_time_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:text=""
                    android:textColor="@color/oil"
                    app:fontName="Font_Bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:text="Team"
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="  : "
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:id="@+id/team_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:text=""
                    android:textColor="@color/oil"
                    app:fontName="Font_Bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:text="Team Member"
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="  : "
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:id="@+id/team_members_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:text=""
                    android:textColor="@color/oil"
                    app:fontName="Font_Bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:text="Pest Types"
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="  : "
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:id="@+id/pest_type_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:text=""
                    android:textColor="@color/oil"
                    app:fontName="Font_Bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_60sdp"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:text="Location"
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="  : "
                    app:fontName="Font_Light" />

                <com.amana.MPESTRidpest.components.CustomFontTextView
                    android:id="@+id/location_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    app:fontName="Font_Bold" />

            </LinearLayout>




        </LinearLayout>


    </ScrollView>


    <LinearLayout
        android:id="@+id/ll_booknow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.amana.MPESTRidpest.components.CustomFontButton
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:text="Cancel"
            android:textAllCaps="true"

            android:textColor="@color/colorPrimaryDark"
            android:visibility="gone"
            app:fontName="Font_Bold" />

        <com.amana.MPESTRidpest.components.CustomFontButton
            android:id="@+id/start_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="8dp"
            android:text="Start"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:fontName="Font_Bold" />

    </LinearLayout>

</RelativeLayout>