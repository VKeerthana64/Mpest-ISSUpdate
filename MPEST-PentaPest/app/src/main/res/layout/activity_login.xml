<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:scaleType="fitXY">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/white"
                app:cardCornerRadius="2dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/_15sdp"
                        android:src="@drawable/logo" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="vertical">

                        <!--  Email Label -->
                        <com.amana.pentapest.components.CustomFontTextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="10dp"
                            android:theme="@style/TextLabelDialog"
                            app:fontName="Font_Medium">

                            <com.amana.pentapest.components.CustomFontEditText
                                android:id="@+id/input_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Login ID"
                                android:inputType="text"
                                android:textColor="@color/oil"
                                android:textSize="@dimen/_12sdp"
                                app:fontName="Font_Medium" />


                        </com.amana.pentapest.components.CustomFontTextInputLayout>

                        <!--  Password Label -->
                        <com.amana.pentapest.components.CustomFontTextInputLayout
                            android:id="@+id/password_input_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="5dp"
                            android:theme="@style/TextLabelDialog"

                            app:fontName="Font_Medium"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleTint="@color/aluminum">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/input_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:textColor="@color/oil"
                                android:textSize="@dimen/_12sdp" />

                        </com.amana.pentapest.components.CustomFontTextInputLayout>

                        <com.amana.pentapest.components.CustomFontTextView
                            app:fontName="Font_Medium"
                            android:id="@+id/errorMsg_txt"
                            android:layout_width="wrap_content"
                            android:textColor="@color/Red"
                            android:visibility="gone"
                            android:layout_gravity="center_horizontal"
                            android:text="Login Id is not exist"
                            android:layout_height="wrap_content" />

                        <ProgressBar
                            android:id="@+id/progressBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:indeterminate="true"
                            android:visibility="gone" />


                    </LinearLayout>

                    <com.amana.pentapest.components.CustomFontButton
                        android:id="@+id/btn_signin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@color/colorAccent"
                        android:text="@string/sign_in"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        app:fontName="Font_Bold" />

                 </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <com.amana.pentapest.components.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:text="@string/powered_by"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        app:fontName="Font_Light" />
</RelativeLayout>
